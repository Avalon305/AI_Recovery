<Window x:Class="spms.view.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spms.view"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Icon="/view/Images/icon2.png"
        Title="宝德龙" Height="720" Width="1290"
        >
    <!--WindowStyle="None"-->
    <Grid>
        <Image Source="/view\Images\Login_Background.jpg"  Margin="0,0,0.2,0" Stretch="Fill"/>
        <Border  Opacity="1" Width="400" Height="400" Background="White" CornerRadius="5" HorizontalAlignment="Right" Margin="0,0,30,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="用户登录" Foreground="Black" FontSize="30" Opacity="1" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Label Content="用户名" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="15" FontWeight="Bold"></Label>
                <!--提示信息-->
                <Label Foreground="Red"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,100,0" Name="error_Info"></Label>
                <!--用户名-->
                <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Height="25" Width="250" Margin="10,0,0,0" BorderThickness="2" BorderBrush="Black" FontWeight="Bold"></TextBox>
                <Label Content="密码" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="15" FontWeight="Bold"></Label>
                <!--密码-->
                <PasswordBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Height="25" Width="250" Margin="10,0,0,0" BorderThickness="2" BorderBrush="Black" FontWeight="Bold"></PasswordBox>
                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Grid Margin="0,0,0,-0.2" Width="392">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button   Content="登录" Width="70" Height="35" Foreground="Black" FontWeight="Bold" FontSize="20" Grid.Column="0" Margin="50,0,0,0" VerticalAlignment="Center" Style="{StaticResource Btn}"></Button>
                        <Button  Content="重置" Width="70" Height="35" Foreground="Black" FontWeight="Bold" FontSize="20" Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource Btn}"></Button>
                    </Grid>

                </StackPanel>

            </Grid>


        </Border>

    </Grid>
</Window>
