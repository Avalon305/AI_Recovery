<Window x:Class="spms.PhotoCutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:imageDealer="clr-namespace:TestImageDealer.ImageDealer"
        xmlns:local="clr-namespace:spms"
        mc:Ignorable="d"
        SizeToContent="Width"
        Title="{DynamicResource Title.Title}"  Loaded="Window_Loaded">
    <Viewbox Stretch="Uniform">
        <Grid>
            

            <imageDealer:ImageDealer Panel.ZIndex="0" x:Name="ImageDealer" Margin="10,10,10,59" OnCutImaging="ImageDealer_OnOnCutImaging">

            </imageDealer:ImageDealer>


            <Button Content="{DynamicResource PhotoCutView.Confirm}" HorizontalAlignment="Right" Margin="0,0,91,10" VerticalAlignment="Bottom" Style="{StaticResource Btn}" Height="25" Width="75"  Click="Button_Click"/>
            <Button Content="{DynamicResource PhotoCutView.Cancel}" HorizontalAlignment="Right" Margin="0,0,7,10" VerticalAlignment="Bottom" Style="{StaticResource Btn}" Height="25" Width="75" Click="Cancel_Click"/>
        </Grid>

    </Viewbox>
</Window>
