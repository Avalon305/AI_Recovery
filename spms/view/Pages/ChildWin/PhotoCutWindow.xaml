<Window x:Class="spms.PhotoCutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:imageDealer="clr-namespace:TestImageDealer.ImageDealer"
        xmlns:local="clr-namespace:spms"
        mc:Ignorable="d"
        Title="{DynamicResource Title.Title}" Height="557.328" Width="568.534" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <imageDealer:ImageDealer Panel.ZIndex="0" x:Name="ImageDealer" Margin="20,20,24,59"  OnCutImaging="ImageDealer_OnOnCutImaging" Grid.ColumnSpan="2">

        </imageDealer:ImageDealer>

        <Image Name="CutImage" Grid.Column="1" Margin="5" VerticalAlignment="Top"></Image>
        <Button Content="{DynamicResource PhotoCutView.Confirm}" HorizontalAlignment="Left" Margin="376,485,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Button Content="{DynamicResource PhotoCutView.Cancel}" HorizontalAlignment="Left" Margin="41,485,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click" Grid.Column="1"/>
    </Grid>
</Window>
