<Window x:Class="spms.PhotoCutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:imageDealer="clr-namespace:TestImageDealer.ImageDealer"
        xmlns:local="clr-namespace:spms"
        mc:Ignorable="d"
        Title="PhotoCutWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <imageDealer:ImageDealer Panel.ZIndex="0" x:Name="ImageDealer" Margin="20"  OnCutImaging="ImageDealer_OnOnCutImaging">

        </imageDealer:ImageDealer>

        <Image Name="CutImage" Grid.Column="1" Margin="5" VerticalAlignment="Top"></Image>
        <Button Content="裁剪" HorizontalAlignment="Left" Margin="124,5,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
